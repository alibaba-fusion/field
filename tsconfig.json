{
  "compilerOptions": {
      "target": "ES6",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "module": "CommonJS",
      "outDir": "lib",
      "moduleResolution": "Node",
      "experimentalDecorators": true,
      "declaration": true,
      "allowJs": true,
      "downlevelIteration": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": false,
      "importHelpers": true
  },
  "include": ["src"]
}

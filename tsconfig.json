{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "allowJs": false,
        "declaration": true,
        "jsx": "react",
        "downlevelIteration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "importHelpers": true,
    },
    "include": ["src", "test"],
}
